{
    "compilerOptions": {
      "target": "ESNext",
      "module": "Node16",
      "moduleResolution": "Node16",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "__tests__"]
  }
  